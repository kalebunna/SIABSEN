<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="16sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat Siang" />
        <TextView
            android:layout_marginTop="-12sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Syauqan Wafiqi"
            android:fontFamily="@font/poppinsbold"
            android:textSize="20sp"
            />
        </LinearLayout>
        <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:layout_gravity="center"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/fb"
                />

            </LinearLayout>
    </LinearLayout>


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@drawable/gradient1"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textSize="20dp"
            android:fontFamily="@font/urbanistblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUDAH ABSEN "
            />
            <TextView
                android:textColor="@color/white"
                android:textSize="20dp"
                android:fontFamily="@font/urbanistblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HARI INI?"
                />
        <com.google.android.material.button.MaterialButton
            android:fontFamily="@font/urbanistbold"
            android:textColor="@color/black"
            android:backgroundTint="@color/yellow"
            android:layout_marginTop="5dp"
            app:cornerRadius="20dp"
            android:text="absen Sekarang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:paddingHorizontal="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsmedium"
            android:text="Menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:paddingHorizontal="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonscan"
            android:fontFamily="@font/urbanistmedium"
            app:cornerRadius="10dp"
            android:paddingHorizontal="0dp"
            android:drawableTint="@color/white"
            android:paddingVertical="10dp"
            android:layout_weight="1"
            app:backgroundTint="#429835"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            android:drawableTop="@drawable/ic_baseline_qr_code_scanner_24"
            android:textSize="10sp"
            android:text="Absen"
            android:src="@drawable/fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="10sp"
                app:cornerRadius="10dp"
                android:paddingHorizontal="0dp"
                android:drawableTint="@color/white"
                android:paddingVertical="10dp"
                android:layout_weight="1"
                app:backgroundTint="#429835"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_baseline_qr_code_scanner_24"
                android:text="history"
                android:src="@drawable/fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="10sp"
                app:cornerRadius="10dp"
                android:paddingHorizontal="0dp"
                android:drawableTint="@color/white"
                android:paddingVertical="10dp"
                android:layout_weight="1"
                app:backgroundTint="#429835"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_baseline_qr_code_scanner_24"
                android:text="Profil"
                android:src="@drawable/fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:textSize="10sp"
                app:cornerRadius="10dp"
                android:paddingHorizontal="0dp"
                android:drawableTint="@color/white"
                android:paddingVertical="10dp"
                android:layout_weight="1"
                app:backgroundTint="#429835"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center"
                android:drawableTop="@drawable/ic_baseline_qr_code_scanner_24"
                android:text="LOGOut"
                android:src="@drawable/fb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/yellow"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp"
                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/urbanistmedium"
                    android:gravity="center"
                    android:text="Masuk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="@color/black"
                    android:layout_marginBottom="20dp"
                    android:textSize="15sp"
                    android:fontFamily="@font/urbanistbold"
                    android:gravity="center"
                    android:text="Sudah Absen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/md_blue_grey_500"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="9dp"
                android:background="@color/yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginTop="10dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanistmedium"
                        android:gravity="center"
                        android:text="keluar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textColor="@color/white"
                        android:layout_marginBottom="20dp"
                        android:textSize="15sp"
                        android:fontFamily="@font/urbanistbold"
                        android:gravity="center"
                        android:text="Sudah Absen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>